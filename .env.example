# KimiLink Voice - 環境設定サンプル
# このファイルを .env にコピーして使用してください

# ===== Twitter OAuth 2.0 設定 =====
# Twitter Developer Portal で取得してください
# https://developer.twitter.com/

# OAuth 2.0 Client ID
TWITTER_CLIENT_ID=your_client_id_here

# OAuth 2.0 Client Secret
TWITTER_CLIENT_SECRET=your_client_secret_here

# Callback URL（OAuth認証後のリダイレクト先）
TWITTER_CALLBACK_URL=https://kimitolink-voice.com/callback

# ===== アプリケーション設定 =====

# アプリケーション名
APP_NAME=KimiLink Voice

# アプリケーションURL（本番環境）
APP_URL=https://kimitolink-voice.com

# 開発環境URL
DEV_URL=http://localhost:8000


# ===== 必須フォローアカウント =====

# クリエイター応援アカウント
REQUIRED_ACCOUNT_1_ID=streamerfunch
REQUIRED_ACCOUNT_1_NAME=君斗りんく@クリエイター応援

# アイドル応援アカウント
REQUIRED_ACCOUNT_2_ID=idolfunch
REQUIRED_ACCOUNT_2_NAME=君斗りんく@アイドル応援


# ===== コラボレーター設定 =====

# コタのAI紀行
COLLABORATOR_ID=c0tanpoTeshi1a
COLLABORATOR_NAME=コタのAI紀行
COLLABORATOR_PRICE=30000


# ===== データベース設定（将来的な実装用） =====

# データベースタイプ (sqlite, mysql, postgresql)
DB_TYPE=sqlite

# SQLite データベースファイル
DB_PATH=./data/kimitolink.db

# MySQL/PostgreSQL 設定（使用する場合）
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=kimitolink_voice
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password


# ===== セキュリティ設定 =====

# セッション秘密鍵（ランダムな文字列を生成）
SESSION_SECRET=your_random_secret_key_here

# JWT秘密鍵
JWT_SECRET=your_jwt_secret_here

# CORS許可ドメイン（カンマ区切り）
ALLOWED_ORIGINS=https://kimitolink-voice.com,https://www.kimitolink-voice.com


# ===== API レート制限 =====

# Twitter API リクエスト制限（1時間あたり）
TWITTER_RATE_LIMIT=100

# プラットフォーム API リクエスト制限（分あたり）
API_RATE_LIMIT=60


# ===== ロギング設定 =====

# ログレベル (debug, info, warn, error)
LOG_LEVEL=info

# ログファイルパス
LOG_PATH=./logs/app.log


# ===== キャッシュ設定 =====

# キャッシュタイプ (memory, redis, memcached)
CACHE_TYPE=memory

# Redis設定（使用する場合）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=


# ===== ストレージ設定 =====

# 音声ファイルの保存先
AUDIO_STORAGE_PATH=./uploads/audio

# 画像ファイルの保存先
IMAGE_STORAGE_PATH=./uploads/images

# 最大ファイルサイズ（MB）
MAX_AUDIO_SIZE=50
MAX_IMAGE_SIZE=5


# ===== メール設定（将来的な実装用） =====

# SMTPサーバー
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_password
# SMTP_FROM=noreply@kimitolink-voice.com


# ===== 支払い設定（将来的な実装用） =====

# Stripe API Key
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# PayPal
# PAYPAL_CLIENT_ID=...
# PAYPAL_SECRET=...


# ===== アナリティクス =====

# Google Analytics
# GA_TRACKING_ID=UA-XXXXX-Y

# Google Tag Manager
# GTM_ID=GTM-XXXXX


# ===== その他 =====

# デバッグモード (true/false)
DEBUG=false

# 本番環境フラグ (production/development)
NODE_ENV=development

# タイムゾーン
TIMEZONE=Asia/Tokyo

# 言語
LANGUAGE=ja
